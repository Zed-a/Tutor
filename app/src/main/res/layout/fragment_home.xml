<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/home_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="59dp"
        android:layout_alignTop="@+id/city"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/home_message"
        android:layout_alignTop="@+id/search"/>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="325dp"
        android:layout_height="175dp"
        android:layout_marginTop="64dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="264dp">

        <ImageView
            android:id="@+id/teacher"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/home_near_teacher"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/institution"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/home_near_institution"
            android:layout_toRightOf="@+id/teacher"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/mate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/home_near_mate"
            android:layout_toRightOf="@+id/institution"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/experience_class"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/home_tiyanke"
            android:layout_toRightOf="@+id/mate"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="338dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近老师"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近机构"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近学伴"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体验课"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#EBE8E8"
        android:layout_below="@id/linear"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优秀讲师"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="15dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="420dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
